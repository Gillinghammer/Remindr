  <div id="contactColumns">
    <div id="Friends">
      <h2>Friends</h2>
      <div class="contact" ng-repeat="contact in myContacts | orderBy: 'remind_on':reverse | filter:{ contact_type: 'Friend'}">
        <img src="{{contact.avatar}}">
        <h3>{{contact.name}}</h3>
        <p>Type: {{ contact.contact_type }}</p>
        <p>Remind every {{contact.remind_interval}} days.</p>
        <p>Remind on:<br> {{contact.remind_on | date:'MMMM d, y'}}</p>
        <p>Last Drink:<br> {{contact.last_meeting | date:'EEEE, MMMM d'}} </p>
        <p>Status: {{ contact.status }}</p>
        <p>Total Drinks: {{contact.drink_count}} </p>
        <button ng-click="recordDrink(contact)">We Met!</button><br>
        <button class="remove" ng-click="removeContact(contact)">Remove Contact</button>
      </div>
    </div>
